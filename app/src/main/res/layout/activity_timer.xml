<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.melisa.rincemathew.malayalamgkquiz.timerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/scoreLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/ic_asset_3ldpi"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:id="@+id/scoreTextView"/>
            <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/ic_asset_3ldpi"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="25sp"
                android:id="@+id/time"
            android:textStyle="bold"
            android:textColor="#fff"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_asset_3ldpi"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="5dp"

                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/life1"
                        android:src="@drawable/heart"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/life2"
                        android:src="@drawable/heart"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/life3"
                        android:src="@drawable/heart"
                        android:layout_gravity="center"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/quizProgress"
                android:padding="5dp"
                android:textSize="10dp"
                android:textColor="#fff"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/answerButtonLayout"
        android:layout_below="@+id/scoreLayout"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:background="@drawable/rounded_edittext"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Questions"
                android:id="@+id/questionTextView"
                android:textSize="20sp"/>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/answerButtonLayout"
        android:orientation="vertical"
        android:layout_above="@+id/admobLinear"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button 1"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:background="@drawable/normal"
                android:layout_margin="5dp"
                android:id="@+id/button1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button 2"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:background="@drawable/normal"
                android:layout_margin="5dp"
                android:id="@+id/button2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button 3"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/normal"
                android:id="@+id/button3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button 4"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:background="@drawable/normal"
                android:layout_margin="5dp"
                android:id="@+id/button4"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/admobLinear"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-6234689785392855/2343365961"

            >
        </com.google.android.gms.ads.AdView>


    </LinearLayout>


</RelativeLayout>
