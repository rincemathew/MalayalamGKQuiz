<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF6A1B9A"
    tools:context="com.melisa.rincemathew.malayalamgkquiz.ScoreActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:layout_marginTop="35dp"
            android:src="@drawable/icon150" />

        <TextView
            android:text="Your score:"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/scoreTextView"
            android:background="#FF6A1B9A"
            android:textColor="#fbfbfc"
            android:layout_marginLeft="15dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TextView
            android:text="Highest score:"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:id="@+id/textHighScore"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:textColor="#fcfafd"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <ImageButton
            android:id="@+id/button"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_centerHorizontal="true"
            android:background="#FF6A1B9A"
            android:layout_gravity="center"
            android:src="@drawable/qaz" />

        <ImageButton
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:onClick="home"
            android:layout_weight="2"
            android:background="#FF6A1B9A"
            android:layout_gravity="center"
            android:src="@drawable/icondog" />

    </LinearLayout>



</RelativeLayout>
